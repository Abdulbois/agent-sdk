# router image
HUB_ROUTER_IMAGE=ghcr.io/trustbloc/hub-router
HUB_ROUTER_IMAGE_TAG=0.1.8
HUB_ROUTER_ORB_DOMAINS=http://testnet.orb.local
HUB_ROUTER_KEY_TYPE=ecdsap256ieee1363
HUB_ROUTER_KEY_AGREEMENT_TYPE=p256kw

# edge Router configurations
EDGE_ROUTER_HOST=0.0.0.0
EDGE_ROUTER_HTTP_INBOUND_PORT=10091
EDGE_ROUTER_WS_INBOUND_PORT=10092
EDGE_ROUTER_API_PORT=10093
EDGE_ROUTER_DB_PATH=/tmp/db/aries1
EDGE_ROUTER_WEBHOOK_PORT=10094
EDGE_ROUTER_AUTOACCEPT=true

# edge Router for DIDComm V2 configs
# TODO temporary below env variables and use original router container vriables above with dynamic env variables
# TODO when karma.conf.js can support env variables
HUB_ROUTER_V2_DIDCOMM_V2=true
HUB_ROUTER_V2_KEY_TYPE=ecdsap256ieee1363
HUB_ROUTER_V2_KEY_AGREEMENT_TYPE=p256kw
EDGE_ROUTER_V2_HOST=0.0.0.0
EDGE_ROUTER_V2_HTTP_INBOUND_PORT=10097
EDGE_ROUTER_V2_WS_INBOUND_PORT=10098
EDGE_ROUTER_V2_API_PORT=10099
EDGE_ROUTER_V2_DB_PATH=/tmp/db/aries1
EDGE_ROUTER_V2_WEBHOOK_PORT=10100


# Sidetree mock
